1st method.
#include<iostream>
using namespace std;
void bubble(int arr[],int n){
    for(int i=n-1;i>=1;i--){
        for(int j=0;j<i;j++){
            if(arr[j] > arr[j +1]){
                int temp = arr[j+1];
                arr[j+1] = arr[j];
                arr[j] = temp;
            }
        }
    }
}
int main(){
    int n;
    cout << "enter the number: ";
    cin >> n;
    int arr[n];
    cout << "Enter " << n << " elements in array:\n";
    for(int i=0;i<n;i++){
        cin >> arr[i];
    }
    cout << "\nbefore sorting\n";
    for(int i=0;i<n;i++){
        cout << arr[i] << " ";
    }
    bubble(arr,n);
    cout << "\nafter sorting\n";
    for(int i=0;i<n;i++){
        cout << arr[i] << " ";
    }
    cout << "\n 2nd largest number: " << arr[n-2];
    return 0;
}
------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
2nd method.

#include<iostream>
using namespace std;
int secondlargest(int arr[],int n){
    int largest=arr[0];
    int ndlargest = -1;
    for(int i=1;i<n;i++){
        if(arr[i]> largest){
            ndlargest = largest;
            largest=arr[i];
        }
        else if(arr[i]>ndlargest && arr[i] != largest){
            ndlargest = arr[i];
        }
        if (ndlargest == -1) {
        cout << "No second largest element found.";
        return -1;
        }
}
return ndlargest;
    
}
int main(){
    int n,i;
    cout<<"enter the number:";
    cin >> n;
    int arr[n];
    cout<<"Enter the " << n << " elements:\n";
    for(i=0;i<n;i++){
        cin >> arr[i];
    }
    cout << "The second largets number: " << secondlargest(arr,n);
    return 0;
}
