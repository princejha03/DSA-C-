1st method.
#include<iostream>
using namespace std;
void bubble(int arr[],int n){
    for(int i=n-1;i>=1;i--){
        for(int j=0;j<i;j++){
            if(arr[j] > arr[j +1]){
                int temp = arr[j+1];
                arr[j+1] = arr[j];
                arr[j] = temp;
            }
        }
    }
}
int main(){
    int n;
    cout << "enter the number: ";
    cin >> n;
    int arr[n];
    cout << "Enter " << n << " elements in array:\n";
    for(int i=0;i<n;i++){
        cin >> arr[i];
    }
    cout << "\nbefore sorting\n";
    for(int i=0;i<n;i++){
        cout << arr[i] << " ";
    }
    bubble(arr,n);
    cout << "\nafter sorting\n";
    for(int i=0;i<n;i++){
        cout << arr[i] << " ";
    }
    cout << "\n 2nd largest number: " << arr[n-2];
    return 0;
}

